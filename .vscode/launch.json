  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch (Debug)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceRoot}/build/bin/x86_64_Debug/slate2d.exe",   
      "preLaunchTask": "Build (Debug)",
      "args": ["+set", "fs.basepath", "${workspaceRoot}"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build/bin/x86_64_Debug/",
      "environment": [],
      "externalConsole": true,
      "osx": {
        "type": "cppdbg",
        "preLaunchTask": "Build (Debug)",
        "program": "${workspaceRoot}/build/bin/x86_64_Debug/slate2d",
        "MIMode": "lldb",
        "externalConsole": false
      }
    },
    {
      "name": "Launch (Release)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceRoot}/build/bin/x86_64_Release/slate2d.exe",   
      "preLaunchTask": "Build (Release)",
      "args": ["+set", "fs.basepath", "${workspaceRoot}"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build/bin/x86_64_Release/",
      "environment": [],
      "externalConsole": true,
      "osx": {
        "type": "cppdbg",
        "preLaunchTask": "Build (Release)",
        "program": "${workspaceRoot}/build/bin/x86_64_Release/slate2d.app",
        "MIMode": "lldb",
        "externalConsole": false
      }
    }
  ]
}